FROM ubuntu:bionic as build_packages
ENTRYPOINT ["/bin/bash"]

RUN mkdir /src
WORKDIR /src
COPY . /src

#? Setup
RUN chmod u+x ./janus.sh
RUN ./janus.sh setup

#? janus-gateway build
RUN ./janus.sh build


# Put configs in place
# COPY conf/*.jcfg /opt/janus/etc/janus/

# Running the app | start for prod |Â dev for development
EXPOSE 8088 8188
USER janus
CMD ["./janus.sh", "start"]